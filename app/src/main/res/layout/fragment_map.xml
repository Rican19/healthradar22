<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- MAP SECTION -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <org.osmdroid.views.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Floating Case Count Legend -->
        <LinearLayout
            android:id="@+id/legend_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#CCFFFFFF"
            android:elevation="8dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case Count Legend"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <View android:layout_width="16dp" android:layout_height="16dp" android:background="#E0E0E0" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp" android:text="0 cases" />
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <View android:layout_width="16dp" android:layout_height="16dp" android:background="#FFF59D" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp" android:text="1–2 cases" />
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <View android:layout_width="16dp" android:layout_height="16dp" android:background="#FFB74D" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp" android:text="3–5 cases" />
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <View android:layout_width="16dp" android:layout_height="16dp" android:background="#F57C00" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp" android:text="6–10 cases" />
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <View android:layout_width="16dp" android:layout_height="16dp" android:background="#E53935" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp" android:text="11–20 cases" />
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <View android:layout_width="16dp" android:layout_height="16dp" android:background="#B71C1C" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp" android:text="21+ cases" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- CONTROL PANEL BELOW MAP -->
    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFFFF"
        android:padding="12dp"
        android:elevation="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Disease"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <Spinner
            android:id="@+id/spinner_disease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/btn_dropdown"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</LinearLayout>
